.page-header
  = link_to items_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_item_path(@item), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show item

%dl.dl-horizontal
  %dt Code:
  %dd= @item.code
  %dt Default translation:
  %dd= @item.default_translation
  %dt Influence:
  %dd= @item.influence
  %dt Observation:
  %dd= @item.observation
  %dt Will:
  %dd= @item.will
  %dt Combat:
  %dd= @item.combat
  %dt Cost:
  %dd= @item.cost
