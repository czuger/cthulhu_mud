= form_for @in_the_news_headline do |f|
  - if @in_the_news_headline.errors.any?
    #error_explanation
      %h2= "#{pluralize(@in_the_news_headline.errors.count, "error")} prohibited this in_the_news_headline from being saved:"
      %ul
        - @in_the_news_headline.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :headline
    = f.text_field :headline
  .actions
    = f.submit 'Save'
