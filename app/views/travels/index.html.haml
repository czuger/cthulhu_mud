.page-header
  = link_to new_travel_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Travel
  %h1 Listing travels

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Place from
        %th Place to
        %th Cost
        %th Duration
        %th
        %th
        %th

    %tbody
      - @travels.each do |travel|
        %tr
          %td= travel.place_from.full_description_name
          %td= travel.place_to.full_description_name
          %td= travel.cost
          %td= travel.duration.strftime( '%T' )
          %td= link_to 'Show', travel
          %td= link_to 'Edit', edit_travel_path(travel)
          %td= link_to 'Destroy', travel, data: { confirm: 'Are you sure?' }, method: :delete
