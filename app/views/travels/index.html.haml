%h1 Listing travels

= link_to 'New Travel', new_travel_path

%table
  %thead
    %tr
      %th Place from
      %th Place to
      %th Cost
      %th Duration
      %th
      %th
      %th

  %tbody
    - @travels.each do |travel|
      %tr
        %td= travel.place_from.full_description_name
        %td= travel.place_to.full_description_name
        %td= travel.cost
        %td= travel.duration.strftime( '%T' )
        %td= link_to 'Show', travel
        %td= link_to 'Edit', edit_travel_path(travel)
        %td= link_to 'Destroy', travel, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Travel', new_travel_path
