= form_for @investigator do |f|
  - if @investigator.errors.any?
    #error_explanation
      %h2= "#{pluralize(@investigator.errors.count, "error")} prohibited this investigator from being saved:"
      %ul
        - @investigator.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, :readonly => true
    \
    %button#change_name{ type: :button } Change name

  .field
    = f.label :Male
    = f.radio_button( :gender, :m, class: :gender_selector )
    = f.label :Female
    = f.radio_button( :gender, :f, class: :gender_selector )

  .field
    = f.label :profession
    = f.select( :profession_id, Profession.all.map { |p| [ p.name, p.id ] } )

  .actions
    = f.submit 'Save'

